<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="br.com.noclaftech.showin.presentation.paymentsuccess.PaymentSuccessViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        android:padding="20dp"
        tools:context=".presentation.paymentsuccess.PaymentSuccessActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thanks_buy"
            android:textColor="@color/pink"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="40dp"
                android:tint="@color/white"
                android:src="@drawable/coin_icon_white"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_payment_success"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="30dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.back()}"
                android:background="@drawable/bg_button"
                android:text="@string/back"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                />

    </LinearLayout>

</layout>